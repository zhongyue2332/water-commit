{
  "name": "water-commit",
  "displayName": "water-commit",
  "description": "Anhui Wote Water Science and Technology Co., Ltd Commit Standard Tool",
  "publisher": "zhongy",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.100.0"
  },
  "icon": "image/logo.png",
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zhongyue2332/water-commit.git"
  },
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "water-commit.start",
        "title": "WaterCommit: 开始提交",
        "category": "WaterCommit",
        "icon": "$(hubot)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus",
          "command": "water-commit.start",
          "group": "navigation"
        }
      ],
      "scm/title": [
        {
          "when": "scmProvider == git",
          "command": "water-commit.start",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Water Commit Configuration",
      "properties": {
        "waterCommit.autoGitAdd": {
          "type": "boolean",
          "default": true,
          "description": "当暂存区为空时自动执行 `git add -A` 后再提交。"
        },
        "waterCommit.autoSyncRemote": {
          "type": "boolean",
          "default": false,
          "description": "提交完成后是否自动同步当前分支到远程仓库。"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "pnpm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "1.100.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "globals": "^16.4.0"
  }
}
